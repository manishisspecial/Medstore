<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Current Offers</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% const demoOffers = [
            { 
                title: 'First Order Discount',
                description: 'Get 20% off on your first order',
                code: 'FIRST20',
                expiry: '2024-12-31'
            },
            { 
                title: 'Free Delivery',
                description: 'Free delivery on orders above â‚¹500',
                code: 'FREEDEL',
                expiry: '2024-12-31'
            },
            {
                title: 'Senior Citizen Discount',
                description: '10% off for senior citizens',
                code: 'SENIOR10',
                expiry: '2024-12-31'
            }
        ] %>
        
        <% demoOffers.forEach(offer => { %>
            <div class="border rounded-lg p-6 bg-gradient-to-r from-blue-50 to-blue-100">
                <h2 class="text-2xl font-semibold text-blue-700"><%= offer.title %></h2>
                <p class="text-gray-600 mt-2"><%= offer.description %></p>
                <div class="mt-4 p-2 bg-white rounded-md inline-block">
                    <span class="font-mono text-blue-600">Code: <%= offer.code %></span>
                </div>
                <p class="text-sm text-gray-500 mt-2">Valid till: <%= offer.expiry %></p>
                <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Apply Offer
                </button>
            </div>
        <% }) %>
    </div>
</div> 