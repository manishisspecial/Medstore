<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Categories</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% const demoCategories = [
            { name: 'Medicines', icon: 'pills', description: 'Prescription and OTC medicines' },
            { name: 'Healthcare', icon: 'heart', description: 'Healthcare devices and equipment' },
            { name: 'Personal Care', icon: 'user', description: 'Personal care and hygiene products' },
            { name: 'Vitamins', icon: 'capsules', description: 'Vitamins and supplements' }
        ] %>
        
        <% demoCategories.forEach(category => { %>
            <div class="border rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
                <i class="fas fa-<%= category.icon %> text-4xl text-blue-500 mb-4"></i>
                <h2 class="text-xl font-semibold"><%= category.name %></h2>
                <p class="text-gray-600 mt-2"><%= category.description %></p>
                <a href="#" class="mt-4 inline-block text-blue-500 hover:text-blue-700">
                    View Products â†’
                </a>
            </div>
        <% }) %>
    </div>
</div> 