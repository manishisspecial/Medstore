<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-50 to-indigo-50 py-16 md:py-24">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div class="text-center md:text-left">
                    <h1 class="heading-font text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
                        Your Health, Our Priority
                    </h1>
                    <p class="text-lg md:text-xl text-gray-600 mb-8">
                        Get medicines delivered to your doorstep. Quality healthcare products at affordable prices.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                        <a href="/products" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all">
                            <i class="ph ph-shopping-cart mr-2"></i>
                            Shop Now
                        </a>
                        <a href="/consult" class="inline-flex items-center justify-center px-6 py-3 bg-white text-blue-600 border-2 border-blue-600 rounded-lg hover:bg-blue-50 transform hover:scale-105 transition-all">
                            <i class="ph ph-stethoscope mr-2"></i>
                            Consult Doctor
                        </a>
                    </div>
                </div>
                <div class="hidden md:block relative">
                    <div class="absolute -top-8 -left-8 w-24 h-24 bg-blue-100 rounded-full opacity-50"></div>
                    <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-indigo-100 rounded-full opacity-50"></div>
                    <img src="https://via.placeholder.com/600x400" alt="Healthcare" class="relative rounded-2xl shadow-2xl transform hover:scale-105 transition-all">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
                    <i class="ph ph-truck text-4xl text-blue-600 mb-4"></i>
                    <h3 class="heading-font text-xl font-semibold mb-3">Fast Delivery</h3>
                    <p class="text-gray-600">Get your medicines delivered within 24 hours</p>
                </div>
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
                    <i class="ph ph-certificate text-4xl text-blue-600 mb-4"></i>
                    <h3 class="heading-font text-xl font-semibold mb-3">Genuine Products</h3>
                    <p class="text-gray-600">100% authentic medicines and healthcare products</p>
                </div>
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
                    <i class="ph ph-headset text-4xl text-blue-600 mb-4"></i>
                    <h3 class="heading-font text-xl font-semibold mb-3">24/7 Support</h3>
                    <p class="text-gray-600">Round the clock customer service support</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Categories -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="heading-font text-3xl md:text-4xl font-bold text-center mb-12">Popular Categories</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <a href="/categories/medicines" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-md text-center transition-all duration-300 group-hover:shadow-xl transform group-hover:-translate-y-1">
                        <i class="ph ph-pill text-4xl text-blue-600 mb-4 transition-transform group-hover:scale-110"></i>
                        <h3 class="heading-font text-lg font-semibold">Medicines</h3>
                    </div>
                </a>
                <a href="/categories/healthcare" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-md text-center transition-all duration-300 group-hover:shadow-xl transform group-hover:-translate-y-1">
                        <i class="ph ph-heartbeat text-4xl text-blue-600 mb-4 transition-transform group-hover:scale-110"></i>
                        <h3 class="heading-font text-lg font-semibold">Healthcare</h3>
                    </div>
                </a>
                <a href="/categories/personal-care" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-md text-center transition-all duration-300 group-hover:shadow-xl transform group-hover:-translate-y-1">
                        <i class="ph ph-drop text-4xl text-blue-600 mb-4 transition-transform group-hover:scale-110"></i>
                        <h3 class="heading-font text-lg font-semibold">Personal Care</h3>
                    </div>
                </a>
                <a href="/categories/vitamins" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-md text-center transition-all duration-300 group-hover:shadow-xl transform group-hover:-translate-y-1">
                        <i class="ph ph-first-aid text-4xl text-blue-600 mb-4 transition-transform group-hover:scale-110"></i>
                        <h3 class="heading-font text-lg font-semibold">Vitamins</h3>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="heading-font text-3xl md:text-4xl font-bold text-center mb-12">Featured Products</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                <% const featuredProducts = [
                    { name: 'Vitamin C', price: 199, image: 'https://via.placeholder.com/200' },
                    { name: 'First Aid Kit', price: 499, image: 'https://via.placeholder.com/200' },
                    { name: 'Pain Relief Spray', price: 299, image: 'https://via.placeholder.com/200' },
                    { name: 'Digital Thermometer', price: 399, image: 'https://via.placeholder.com/200' }
                ] %>

                <% featuredProducts.forEach(product => { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all hover:shadow-xl">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="heading-font text-lg font-semibold mb-2"><%= product.name %></h3>
                            <p class="text-blue-600 font-bold mb-4">â‚¹<%= product.price %></p>
                            <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center">
                                <i class="ph ph-shopping-cart mr-2"></i>
                                Add to Cart
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="heading-font text-3xl md:text-4xl font-bold mb-4">Stay Updated</h2>
            <p class="mb-8 text-lg">Get health tips and exclusive offers directly in your inbox.</p>
            <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
                <input type="email" placeholder="Enter your email" 
                    class="flex-1 px-4 py-3 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-white">
                <button type="submit" 
                    class="px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-gray-100 transition-colors font-semibold flex items-center justify-center">
                    <i class="ph ph-paper-plane-right mr-2"></i>
                    Subscribe
                </button>
            </form>
        </div>
    </section>
</body>
</html> 