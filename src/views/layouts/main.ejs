<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .heading-font {
            font-family: 'Playfair Display', serif;
        }
        /* Custom animations */
        .menu-slide-in {
            animation: slideIn 0.3s ease-out;
        }
        @keyframes slideIn {
            from { transform: translateX(-100%); }
            to { transform: translateX(0); }
        }
    </style>
</head>
<body class="flex flex-col min-h-screen bg-gray-50">
    <!-- Mobile Menu (Hidden by default) -->
    <div id="mobileMenu" class="fixed inset-0 bg-gray-800 bg-opacity-50 z-50 hidden">
        <div class="bg-white w-4/5 max-w-sm h-full shadow-xl flex flex-col">
            <div class="p-4 border-b flex justify-between items-center">
                <span class="text-2xl font-bold text-blue-600">MedStore</span>
                <button onclick="toggleMobileMenu()" class="text-gray-500 hover:text-gray-700">
                    <i class="ph ph-x-circle text-2xl"></i>
                </button>
            </div>
            <nav class="flex-1 p-4">
                <div class="space-y-4">
                    <a href="/" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-house-line mr-2"></i> Home
                    </a>
                    <a href="/products" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-shopping-bag mr-2"></i> Products
                    </a>
                    <a href="/categories" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-squares-four mr-2"></i> Categories
                    </a>
                    <a href="/cart" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-shopping-cart mr-2"></i> Cart
                    </a>
                    <div class="border-t my-4"></div>
                    <a href="/auth/login" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-sign-in mr-2"></i> Login
                    </a>
                    <a href="/auth/register" class="block py-2 px-4 text-gray-800 hover:bg-blue-50 rounded-lg">
                        <i class="ph ph-user-plus mr-2"></i> Register
                    </a>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-40">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <!-- Mobile menu button -->
                <button onclick="toggleMobileMenu()" class="md:hidden text-gray-500 hover:text-gray-700">
                    <i class="ph ph-list text-2xl"></i>
                </button>

                <!-- Logo -->
                <a href="/" class="flex items-center">
                    <i class="ph ph-heartbeat text-3xl text-blue-600 mr-2"></i>
                    <span class="text-2xl font-bold text-blue-600 heading-font">MedStore</span>
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex space-x-8">
                    <a href="/" class="text-gray-600 hover:text-blue-600 flex items-center">
                        <i class="ph ph-house-line mr-1"></i> Home
                    </a>
                    <a href="/products" class="text-gray-600 hover:text-blue-600 flex items-center">
                        <i class="ph ph-shopping-bag mr-1"></i> Products
                    </a>
                    <a href="/cart" class="text-gray-600 hover:text-blue-600 flex items-center">
                        <i class="ph ph-shopping-cart mr-1"></i> Cart
                    </a>
                </div>

                <!-- Auth Buttons -->
                <div class="hidden md:flex space-x-4">
                    <a href="/auth/login" class="px-4 py-2 text-blue-600 hover:text-blue-700 flex items-center">
                        <i class="ph ph-sign-in mr-1"></i> Login
                    </a>
                    <a href="/auth/register" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center">
                        <i class="ph ph-user-plus mr-1"></i> Register
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-8">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div>
                    <h3 class="text-lg font-semibold mb-4 heading-font">About MedStore</h3>
                    <p class="text-gray-400">Your trusted partner in healthcare, providing quality medicines and healthcare products.</p>
                    <div class="mt-4 flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="ph ph-facebook-logo text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="ph ph-twitter-logo text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="ph ph-instagram-logo text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="text-lg font-semibold mb-4 heading-font">Quick Links</h3>
                    <ul class="space-y-2">
                        <li>
                            <a href="/about" class="text-gray-400 hover:text-white transition-colors flex items-center">
                                <i class="ph ph-info mr-2"></i> About Us
                            </a>
                        </li>
                        <li>
                            <a href="/contact" class="text-gray-400 hover:text-white transition-colors flex items-center">
                                <i class="ph ph-envelope mr-2"></i> Contact Us
                            </a>
                        </li>
                        <li>
                            <a href="/blog" class="text-gray-400 hover:text-white transition-colors flex items-center">
                                <i class="ph ph-newspaper mr-2"></i> Blog
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- More sections... -->
            </div>
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }
    </script>
</body>
</html> 